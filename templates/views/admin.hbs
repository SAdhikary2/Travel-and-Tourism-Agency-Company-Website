        .table-container {
            width:
                100vw;
            max-height: 400px;
         
        }

        table {
            width: 90vw;
            border-collapse: collapse;
            border: 1.5px solid black;
            overflow-x: auto;
            margin: auto;
        }

        th,
        td {
            padding: 15px;
            text-align: left;
            
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        @media screen and (max-width: 1024px) {

            table,
            thead,
            tbody,
            td,
            tr {
                display: block;
            }

            th {
                display: none;
            }
          

            td:nth-of-type(1):before {
                content: "S.No : ";
                font-weight:700 ;
                color: red;
            }

              td:nth-of-type(2):before {
                content: "Date : ";
                font-weight:700 ;
                 color: red;
            }

            td:nth-of-type(3):before {
                content: "First Name : ";
                font-weight:700 ;
                 color: red;
            }

            td:nth-of-type(4):before {
                content: "LastName: ";
                font-weight:700 ;
                 color: red; }
             td:nth-of-type(5):before { content: " Destination: ";
             font-weight:700 ;
              color: red; }
               td:nth-of-type(6):before {
                    content: "Email : ";
                    font-weight:700 ;
                     color: red;
                }

                td:nth-of-type(7):before {
                    content: "Number of Guests : ";
                    font-weight:700 ;
                     color: red;
                }

                td:nth-of-type(8):before {
                    content: "Check-in Date : ";
                    font-weight:700 ;
                     color: red;
                }

                td:nth-of-type(9):before {
                    content: "Check-out Date : ";
                    font-weight:700 ;
                     color: red;
                }

                td:nth-of-type(10):before {
                    content: "Special Request : ";
                    font-weight:700 ;
                     color: red;
                }
                  td:nth-of-type(11):before {
                    content: "Status : ";
                    font-weight:700 ;
                     color: red;
                }

        
            }

            .header{
                height: 70px;
                width: 100%;
                background: red;
                display: flex;
                align-items: center;
                justify-content: flex-end;
                gap: 20px;
            }
            .header a{
                height: 40px;
                width: 100px;
                background:black;
               text-decoration: none;
               color:white;
               text-align: center;
               font-size: 1.2rem;
               font-weight: 500;
               border-radius: 20px;
               box-shadow: 3px 3px 3px grey;
             
            }

            button{
                width: 100px;
                font-weight: 600;
            }
    </style>
    
</head>

