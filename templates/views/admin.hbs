<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <style>
        h1 {
            text-align: center;
            font-size: 3vw;
            position: relative
        }

        @media screen and (max-width:828px) {
            h1 {
                font-size: 4vw;
            }
        }

        @media screen and (max-width:462px) {
            h1 {
                font-size: 6vw;
            }
        }

        .table-container {
            width:
                100vw;
            max-height: 400px;
            /* Adjust this value according to your needs */
        }

        table {
            width: 90vw;
            border-collapse: collapse;
            border: 1.5px solid black;
            overflow-x: auto;
            margin: auto;
        }

        th,
        td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        @media screen and (max-width: 1024px) {

            table,
            thead,
            tbody,
            td,
            tr {
                display: block;
            }

            th {
                display: none;
            }

            td:nth-of-type(1):before {
                content: "S.No : ";
            }

            td:nth-of-type(2):before {
                content: "First Name : ";
            }

            td:nth-of-type(3):before {
                content: "Last
 Name: "; } td:nth-of-type(4):before { content: " Email: "; }
 td:nth-of-type(5):before {
                    content: "Phone Number : ";
                }

                td:nth-of-type(6):before {
                    content: "Number of Guests : ";
                }

                td:nth-of-type(7):before {
                    content: "Check-in Date : ";
                }

                td:nth-of-type(8):before {
                    content: "Check-out Date : ";
                }

                td:nth-of-type(9):before {
                    content: "Special Request : ";
                }
            }
    </style>
    
</head>

<body>

    <div class="table-conatiner">
        <h1>Visitors Data</h1>
        <table>
            <tr>
                <th>S.No</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Number of Guests</th>
                <th>Check-in Date</th>
                <th>Check-out Date</th>
                <th>Special Request</th>
                <th>Actions</th>
            </tr>

            {{#each formData}}
            <tr>
                <td>{{addOne @index}}</td>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.email}}</td>
                <td>+91{{this.phoneNumber}}</td>
                <td>{{this.numberOfGuests}}</td>
                <td>{{date this.checkInDate "DD-MM-YYYY"}}</td>
                <td>{{date this.checkOutDate "DD-MM-YYYY"}}</td>
                <td>{{this.specialRequest}}</td>
                <td>
                    <form action="/admin/confirm/{{this._id}}" method="post">
                        <button type="submit">Confirm</button>
                    </form>

                    <form action="/admin/delete/{{this._id}}" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>

</body>

</html>