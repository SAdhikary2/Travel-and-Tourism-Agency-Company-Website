</nav>

    <div class="table-conatiner ">
       
        <h1>Visitors Data</h1>
        <table class="table  table-bordered table-responsive">
            <thead class="table-danger" >
                  <tr>
                <th scope="col">S.No</th>
                <th scope="col"> Date</th> 
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Destination</th>
                <th scope="col">Email</th>
                <th scope="col">Number of Guests</th>
                <th scope="col">Check-in Date</th>
                <th scope="col">Check-out Date</th>
                <th scope="col">Special Request</th>
                  <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
          

            
            <tbody>
                {{#each formData}}
                <tr>
                <td>{{addOne @index}}</td>
                  <td>{{date this.submissionDate "DD-MM-YYYY"}}</td>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.destination}}</td>
                <td>{{this.email}}</td>
                <td>{{this.numberOfGuests}}</td>
                <td>{{date this.checkInDate "DD-MM-YYYY"}}</td>
                <td>{{date this.checkOutDate "DD-MM-YYYY"}}</td>
                <td>{{this.specialRequest}}</td>
                   <td id="status">{{this.status}}</td>
                <td>
                    <form action="/admin/confirm/{{this._id}}" method="post">
                        <button id="confirmButton" style="background-color: green; color:white" type="submit">Confirm</button>
                    </form>

                    <form action="/admin/delete/{{this._id}}" method="post">
                        <button type="submit" style="background-color: red; color:white">Delete</button>
                    </form>
                </td>
            </tr>
               {{/each}}
            </tbody>
         
        </table>
    </div>



</body>

